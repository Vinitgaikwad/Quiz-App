generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User
model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Role   @default(User)

  results Result[]
}

enum Role {
  Admin
  User
  SuperAdmin
}

model Result {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  marks   Int          @default(0)
  answers UserAnswer[]

  quiz   Quiz @relation(fields: [quizId], references: [id])
  quizId Int

  @@unique([userId, quizId])
}

model UserAnswer {
  id Int @id @default(autoincrement())

  questionId Int
  userAns    String

  result   Result @relation(fields: [resultId], references: [id])
  resultId Int
}

// Quiz
model Quiz {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  questions   Question[]
  results     Result[]
}

model Question {
  id           Int          @id @default(autoincrement())
  question     String
  questiontype QuestionType @default(MultipleChoice)

  options        String[]
  correctAnswers String[]

  quiz   Quiz @relation(fields: [quizId], references: [id])
  quizId Int
}

enum QuestionType {
  MultipleChoice
  TextBased
}
