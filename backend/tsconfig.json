{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    /* Node backend settings */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    /* Outputs */
    "sourceMap": true,
    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* Compatibility */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src",
    "src/types"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "prisma.config.ts"
  ]
}